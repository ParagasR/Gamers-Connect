<a class="columns" href='/posts/{{id}}'>
    <div class="card column is-three-fifths">
        <div id="post-card" class="card-header content">
            <h1>{{title}}</h1>
            <h2>{{user.username}}</h2>

        </div>
        <div id="card-post" class="card-content content">
            <h1>{{content}}</h1>
        </div>
    </div>
</a>

